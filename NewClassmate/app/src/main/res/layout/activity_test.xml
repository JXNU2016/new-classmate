<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margintop"
                android:text="分寝测试"
                android:textColor="@color/colorTestName"
                android:textSize="@dimen/titleSize" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margintop"
                android:layout_marginTop="@dimen/margintop"
                app:cardCornerRadius="15dp"
                app:cardElevation="15dp">

                <RelativeLayout
                    android:id="@+id/org_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@mipmap/img2"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv1"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_toLeftOf="@id/tv1"
                                android:background="@mipmap/deng" />

                            <TextView
                                android:id="@+id/tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:text="分寝测试题"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/textSize" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/isComplete1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="还未完成测试"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/startT1"
                        android:layout_width="@dimen/buttonWidth"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/testitem_shape"
                        android:text="开始测试"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margintop"
                android:textColor="@color/colorTestName"
                android:text="好友推荐测试"
                android:textSize="@dimen/titleSize" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margintop"
                android:layout_marginTop="@dimen/margintop"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:id="@+id/friend_layout"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@mipmap/img2"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv2"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_toLeftOf="@id/tv2"
                                android:background="@mipmap/deng" />

                            <TextView
                                android:id="@+id/tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:text="好友推荐测试题"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/textSize" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/isComplete2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="还未完成测试"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/startT2"
                        android:layout_width="@dimen/buttonWidth"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/testitem_shape"
                        android:text="开始测试"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTestName"
                android:layout_marginTop="@dimen/margintop"
                android:text="社团推荐测试"
                android:textSize="@dimen/titleSize" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margintop"
                android:layout_marginTop="@dimen/margintop"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:id="@+id/class_layout"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@mipmap/img2"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv3"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_toLeftOf="@id/tv3"
                                android:background="@mipmap/deng" />

                            <TextView
                                android:id="@+id/tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:text="社团推荐测试题"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/textSize" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/isComplete3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="还未完成测试"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/startT3"
                        android:layout_width="@dimen/buttonWidth"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/testitem_shape"
                        android:text="开始测试"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margintop"
                android:text="课程推荐测试"
                android:textColor="@color/colorTestName"
                android:textSize="@dimen/titleSize" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margintop"
                android:layout_marginTop="@dimen/margintop"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:id="@+id/org_layout"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@mipmap/img2"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv4"
                                android:layout_width="25dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_toLeftOf="@id/tv4"
                                android:background="@mipmap/deng" />

                            <TextView
                                android:id="@+id/tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:text="课程推荐测试题"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/textSize" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/isComplete4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="还未完成测试"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorWhite"
                            android:textSize="10dp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/startT4"
                        android:layout_width="@dimen/buttonWidth"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/testitem_shape"
                        android:text="开始测试"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
