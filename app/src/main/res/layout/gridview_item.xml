<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/labels_title"
        xmlns:titlebar="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:centerText="编辑标签"
        titlebar:centerType="textView"
        titlebar:leftDrawable="@drawable/comm_titlebar_back_normal"
        titlebar:leftType="textView"
        titlebar:rightType="textView"
        titlebar:rightText="提交"
        titlebar:rightTextColor="@color/actionsheet_red"
        />

  <com.donkingliang.labels.LabelsView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/labels"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:minHeight="25dp"
      android:padding="5dp"
      app:labelBackground="@drawable/label_bg"
      app:labelTextColor="@drawable/label_text_color"
      app:labelTextSize="20sp"
      app:labelTextPaddingBottom="5dp"
      app:labelTextPaddingLeft="10dp"
      app:labelTextPaddingRight="10dp"
      app:labelTextPaddingTop="5dp"
      app:lineMargin="30dp"
      app:wordMargin="25dp"
      app:selectType="MULTI"
      app:maxSelect="0"
      />

</LinearLayout>